<div class="user-menu">
    <div class="user-menu-start">
        <h3 class="pb-2">@Localizer["User"]</h3>

        <AuthorizeView>
            <Authorized>
                <span class="btn side-panel-item">@Greeting @(UserName)!</span>
                <a href="/User/Manage" class="btn side-panel-item">@Localizer["ManageProfile"]</a>
                <a class="btn side-panel-item" href="javascript:$('#logout-form').submit()">@Localizer["LogOut"]</a>
                <form id="logout-form" method="post" action="@Options.LogoutControllerPath"></form>
            </Authorized>
            <NotAuthorized>
                <a class="btn side-panel-item" href="@Options.LoginControllerPath">@Localizer["LogIn"]</a>
            </NotAuthorized>
        </AuthorizeView>
    </div>

    <div class="user-menu-end">
    </div>
</div>